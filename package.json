{
    "name": "backbundle",
    "version": "1.0.0",
    "description": "A specialized bundler for Node.js backend projects (NestJS, Koa, Express) using esbuild",
    "main": "dist/index.js",
    "bin": {
        "backbundle": "./dist/cli.js"
    },
    "type": "module",
    "scripts": {
        "build": "tsdown",
        "build:tsc": "tsgo",
        "build:watch": "tsdown --watch",
        "dev": "tsx src/cli.ts",
        "test": "node --test",
        "lint": "oxlint --type-aware",
        "lint:fix": "oxlint --type-aware --fix",
        "type-check": "tsgo --noEmit",
        "prepublishOnly": "pnpm run build"
    },
    "keywords": [
        "bundler",
        "nodejs",
        "nestjs",
        "express",
        "koa",
        "esbuild",
        "backend"
    ],
    "author": "elecmonkey",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.6.0",
        "commander": "^14.0.0",
        "esbuild": "^0.25.9",
        "fs-extra": "^11.3.1",
        "glob": "^11.0.3",
        "ora": "^8.2.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^24.3.0",
        "@typescript/native-preview": "7.0.0-dev.20250831.1",
        "oxlint": "^1.14.0",
        "oxlint-tsgolint": "^0.1.5",
        "tsdown": "^0.14.2",
        "tsx": "^4.20.5"
    }
}